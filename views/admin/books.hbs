<div class="container-fluid">
	<h1 class="mt-4">Quản lý sách

		<a href="/admin/them-sach" class="btn btn-outline-success btn-lg" style="float: right">
			Thêm sách mới
		</a>
	</h1>
	<div class="card mb-4">
		<div class="card-body" style="overflow:hidden">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>STT</th>
							<th>Mã sách</th>
							<th>Tên sách</th>
							<th>Thể loại</th>
							<th>Tác giả</th>
							<th>Ngày nhập</th>
							<th>Có sẵn?</th>
							<th>Người mượn</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{{#each list}}
						<tr>
							<td>{{this.index}}</td>
							<td>{{this.id}}</td>
							<td>{{this.title}}</td>
							<td>{{this.category.name}}</td>
							<td>{{this.author}}</td>
							<td>{{this.createdAt}}</td>
							<td style="text-align:center">
								{{#if this.isAvailable}}
								<i class="fas fa-check"></i>
								{{else}}
								{{/if}}
							</td>
							<td>{{this.user.username}}</td>
							<td>
								<a href="/chi-tiet-sach/{{this.id}}" target="_blank" class="btn btn-info">
									<i class="fas fa-info-circle"></i>
								</a>
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>