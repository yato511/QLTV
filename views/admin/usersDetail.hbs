<div class="container-fluid">
    <h2 class="mt-4">{{this.data.name}}
        <button class="btn btn-danger btn-lg" style="float: right">Thêm vào DS Đen</button>
    </h2>
    <div>
        <strong>Lớp: </strong> {{this.data.class}}
    </div>
    <div>
        <strong>Username: </strong> {{this.data.username}}
    </div>
    <div>
        <strong>Ngày tạo: </strong> {{this.data.createdAt}}
    </div>
    <div>
        <strong>Ngày hết hạn: </strong> {{this.data.expiredDate}}
    </div>
    <div class="card my-4">
        <div class="card-body" style="overflow:hidden">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã sách</th>
                            <th>Tên sách</th>
                            <th>Tác giả</th>
                            <th>Ngày mượn</th>
                            <th>Ngày trả</th>
                            <th>Quá hạn</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each this.data.list}}
                        <tr>
                            <td>{{this.index}}</td>
                            <td>{{this.book.id}}</td>
                            <td>{{this.book.title}}</td>
                            <td>{{this.book.author}}</td>
                            <td>{{this.createdAt}}</td>
                            <td>{{this.returnDate}}</td>
                            <td style="text-align:center">
                                {{#if this.isOver}}
                                <i class="fas fa-check"></i>
                                {{else}}
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>