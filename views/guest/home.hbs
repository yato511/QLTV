<div class="container">
	<div class="row mt-5">
		<div class="col-md-12">
			<h2>Danh mục sách</h2>
			<div class="row">
				<div class="col-md-12">
					{{#each this.category}}
					<a href="/danh-sach/{{this.id}}" class="btn btn-outline-success btn-lg">{{this.name}}</a>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
	<div class="row my-5">
		<div class="col-md-12">
			<h2>Sách mới</h2>
			<div class="row">
				{{#each this.newBooks}}
				<div class="col-md-3">
					<div class="card">
						<img src="/imgs/books/{{this.id}}.png" class="card-img-top" />
						<div class="card-body px-3 py-1">
							<h6><a href="/chi-tiet-sach/{{this.id}}">{{this.title}}</a></h6>
							<p class="card-text mb-1">Tác giả: {{this.author}}</p>
							<p class="card-text">Thể loại: <a
									href="/danh-sach/{{this.category.id}}">{{this.category.name}}</a></p>
						</div>
					</div>
				</div>
				{{/each}}

			</div>
		</div>
	</div>
</div>