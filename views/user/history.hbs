<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
            <h2>Lịch sử mượn trả: </h2>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body" style="overflow:hidden">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên sách</th>
                                    <th>Tác giả</th>
                                    <th>Ngày mượn</th>
                                    <th>Ngày trả</th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each list}}
                                <tr>
                                    <td>{{this.index}}</td>
                                    <td>{{this.book.title}}</td>
                                    <td>{{this.book.author}}</td>
                                    <td>{{this.book.createdAt}}</td>
                                    <td>{{this.returnDate}}</td>

                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>